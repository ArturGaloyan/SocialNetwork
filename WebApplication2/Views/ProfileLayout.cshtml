
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProfileLayout</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

</head>
<body>
    <nav id="verev" class="navbar navbar-expand-sm bg-dark">

        <!-- Links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-white" href="/User/Profile">Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/Friends/MyRequests">My Requests</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/chat/dashboard">Chat
                    <span v-if="qanak>0" class="text-danger">({{qanak}})</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/Friends/MyFriends">My Friends</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/User/Settings">Settings</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/User/Logout">Logout</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/Posts/Grarumner">Post</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/Posts/MyPosts">MyPosts</a>
            </li>


        </ul>

    </nav>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.6.11/vue.min.js"></script>
    <div class="container">
        @RenderBody()
    </div>

    <script>
        new Vue({
            el: "#verev",
            data: {
                qanak:0
            },
            created: function () {
                setInterval(() => {
                    axios.get("/chat/getMyNotifications")
                        .then(r => {
                            console.log(r.data)
                            this.qanak = r.data;
                        })
                },300)
            }
        })
    </script>
</body>
</html>
