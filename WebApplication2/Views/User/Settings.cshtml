
@{
    Layout = "~/Views/ProfileLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Settings</title>
</head>
<body>
    <form action="/User/Settings" method="post">
        @if (TempData["Namak"] != null)
        {
            <p style="color:red">@TempData["Namak"]</p>
        }
        <h1>Change login</h1>

        <div>
            <label>Your password</label>
            <input name="password" type="password" />

        </div>
        <div>
            <label>Your new login</label>
            <input name="login" />
        </div>
        <div>
            <button>Change login</button>
        </div>
    </form>

    <form action="/User/changePassword" method="post">
        @if (TempData["Namak2"] != null)
        {
            <p style="color:red">@TempData["Namak2"]</p>
        }
        <h1>Change Password</h1>
        <div>
            <label>Old password</label>
            <input name="oldPassword" type="password" />
        </div>
        <div>
            <label> New Password</label>
            <input name="newPassword" type="password" />
        </div>
        <div>
            <button>Change password</button>
        </div>



    </form>

    <form action="/user/upload" method="post" enctype="multipart/form-data">
        <h1>upload picture</h1>
        <input type="file" name="nkar"/>
        <button class="btn btn-success">save</button>
    </form>








</body>
</html>
